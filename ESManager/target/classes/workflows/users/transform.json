{
  "description": "User engagement metrics per country",
  "source": {
    "index": [
      "user_events"
    ]
  },
  "dest": {
    "index": "user_engagement_metrics"
  },
  "frequency": "5m",
  "sync": {
    "time": {
      "field": "event_time",
      "delay": "120s"
    }
  },
  "pivot": {
    "group_by": {
      "activity_day": {
        "date_histogram": {
          "field": "event_time",
          "calendar_interval": "1d"
        }
      },
      "country": {
        "terms": {
          "field": "country_iso"
        }
      }
    },
    "aggregations": {
      "active_users": {
        "cardinality": {
          "field": "user_id"
        }
      },
      "average_session_duration": {
        "avg": {
          "field": "session_duration"
        }
      },
      "new_users": {
        "sum": {
          "field": "is_new_user"
        }
      }
    }
  }
}
